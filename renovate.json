{
  "labels": ["renovate"],
  "packageRules": [
    {
      "updateTypes": ["major"],
      "addLabels": ["major"]
    },
    {
      "updateTypes": ["minor"],
      "addLabels": ["minor"]
    },
    {
      "updateTypes": ["patch"],
      "addLabels": ["patch"]
    },
    {
      "datasources": ["docker","helm","terraform-provider"],
      "automerge": true,
      "ignoreTests": true,
      "ignoreUnstable": true
    },
    {
      "matchManagers": [
        "terraform"
      ],
      "groupName": "Terraform-Modules",
      "separateMajorMinor": false
    }
  ],
  "repositories": [
    "steveizzle/terratest-experiment"
  ]
}
