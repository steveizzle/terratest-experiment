{
  "extends": ["config:base",":disableDependencyDashboard"],
  "labels": ["renovate"],
  "enabledManagers": ["terraform"],
  "packageRules": [
    {
      "matchPaths": ["test-cluster"],
      "matchManagers": [
        "terraform"
      ],
      "groupName": "Terraform-Modules",
      "separateMajorMinor": false,
      "automerge": true,
      "ignoreTests": true,
      "ignoreUnstable": false
    },
    {
      "matchPaths": ["prod-cluster"],
      "matchManagers": [
        "terraform"
      ],
      "groupName": "Terraform-Modules",
      "separateMajorMinor": false,
      "automerge": true,
      "ignoreTests": true,
      "ignoreUnstable": true
    }
  ],
  "repositories": [
    "steveizzle/terratest-experiment"
  ]
}
